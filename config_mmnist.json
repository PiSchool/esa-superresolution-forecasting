{
"name": "MMnist_pred",
  "n_gpu": 1,
  "arch": {
    "type": "Net",
    "args": {
      "shape": [64,64],
      "input_chans": 1,
      "kernel_size": 5,
      "hidden_dim": 64,
      "batch_size": 32,
      "n_past": 5,
      "n_fut": 5,
      "num_layer": 2
    }
  },
  "data_loader": {
    "type": "MMnistDataLoader",
    "args": {
      "data_dir": "data/mmnist",
      "batch_size": 32,
      "shuffle": true,
      "validation_split": 0.1,
      "num_workers": 2
    }

  },

  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 1e-4,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": "mse_loss",
  "metrics": [
        "PSNR", "SSIM"
    ],
  "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
  "trainer": {
        "epochs": 10,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
