{
  "name": "S5_pred",
  "n_gpu": 1,
  "arch": {
    "type": "Net",
    "args": {
      "shape": [128,128],
      "input_chans": 1,
      "kernel_size":3,
      "hidden_dim": 64,
      "batch_size": 8,
      "n_past": 5,
      "n_fut": 5,
      "num_layer": 2
    }
  },
  "data_loader": {
    "type": "S5DataLoader",
    "args": {
      "data_dir": "data/seqs",
      "batch_size": 8,
      "shuffle": true,
      "validation_split": 0.1,
      "num_workers": 0,
      "im_size": 128,
      "n_past": 5,
      "n_fut": 5
    }

  },

  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 1e-5,
      "weight_decay": 1e-5,
      "amsgrad": true
    }
  },
  "loss": "masked_mse_loss",
  "metrics": [
        "PSNR", "SSIM"
    ],
  "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
  "trainer": {
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
